# Eazepay Identity Service Configuration

# ================================
# SERVICE MODE
# ================================
# Options: standalone, integrated
SERVICE_MODE=integrated

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=development
PORT=8000

# ================================
# DATABASE
# ================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=eazepay_dev
DB_USER=developer
DB_PASS=dev_password_2024!

# ================================
# REDIS (Session & Cache)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024!

# ================================
# SECURITY
# ================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# ================================
# CORS
# ================================
CORS_ORIGIN=*
# For production: CORS_ORIGIN=https://app.eazepay.com,https://admin.eazepay.com

# ================================
# EXTERNAL SERVICES (Optional for standalone)
# ================================
# Biometric Service
BIOMETRIC_SERVICE_URL=http://localhost:8001
BIOMETRIC_SERVICE_ENABLED=true

# Transaction Service
TRANSACTION_SERVICE_URL=http://localhost:8002
TRANSACTION_SERVICE_ENABLED=true

# Message Queue (Optional)
RABBITMQ_URL=amqp://admin:rabbitmq_password_2024!@localhost:5672/eazepay
RABBITMQ_ENABLED=true

# ================================
# NOTIFICATIONS
# ================================
# SMS Provider
SMS_PROVIDER=twilio
SMS_API_KEY=
SMS_FROM_NUMBER=

# Email Provider
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@eazepay.com

# ================================
# GOVERNMENT VERIFICATION (Optional)
# ================================
GOVERNMENT_API_ENABLED=false
GOVERNMENT_API_URL=
GOVERNMENT_API_KEY=

# ================================
# MONITORING
# ================================
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
