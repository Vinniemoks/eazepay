# Secure Environment Configuration Template
# This file contains secure defaults and should be copied to .env for production use

# JWT Configuration
# Generate a strong random secret (minimum 64 characters for production)
JWT_SECRET=your-super-secure-jwt-secret-min-64-chars-change-this-immediately
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=eazepay-iot-service
JWT_AUDIENCE=eazepay-services
JWT_ALGORITHM=HS256

# API Keys
# Generate secure random API keys (minimum 20 characters)
INTERNAL_API_KEY=ak_secure_random_api_key_min_20_chars_change_this
FIREBASE_API_KEY=your_firebase_api_key
SENDGRID_API_KEY=your_sendgrid_api_key
GOVERNMENT_API_KEY=your_government_api_key
NVD_API_KEY=your_nvd_api_key

# Database Security
DATABASE_URL=postgresql://username:secure_password@localhost:5432/eazepay_db
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_POOL_SIZE=10
DATABASE_MAX_CONNECTIONS=20

# Security Headers
SECURITY_HEADERS_ENABLED=true
REMOVE_POWERED_BY=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false
RATE_LIMIT_SKIP_FAILED=false

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://app.eazepay.com,https://admin.eazepay.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Internal-API-Key,X-Correlation-ID
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Input Validation
MAX_REQUEST_SIZE=10485760
MAX_PARAMETER_LENGTH=1024
MAX_HEADER_LENGTH=8192
STRICT_VALIDATION_MODE=true

# Logging and Audit
AUDIT_LOGGING_ENABLED=true
SANITIZE_LOGGING=true
LOG_LEVEL=info

# Production Security
NODE_ENV=production
DEBUG=false
FORCE_HTTPS=true

# Session and Cookie Security
SESSION_SECRET=your-super-secure-session-secret-min-64-chars-change-this
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Redis Security (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=secure_redis_password
REDIS_SSL=true

# Monitoring and Alerting
SECURITY_ALERT_EMAIL=security@eazepay.com
SECURITY_ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup and Recovery
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-min-32-chars
BACKUP_RETENTION_DAYS=90

# API Key Rotation
API_KEY_ROTATION_INTERVAL=2592000
API_KEY_MIN_LENGTH=20

# Additional Security Settings
ENABLE_SECURITY_SCANNING=true
ENABLE_VULNERABILITY_MONITORING=true
SECURITY_SCAN_INTERVAL=86400

# Compliance Settings
GDPR_COMPLIANCE=true
PCI_COMPLIANCE=true
SOC2_COMPLIANCE=true