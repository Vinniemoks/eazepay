# Eazepay Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ================================
# ENVIRONMENT
# ================================
NODE_ENV=production
PYTHON_ENV=production
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true

# ================================
# DATABASE CONFIGURATION
# ================================
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=eazepay_dev
POSTGRES_USER=developer
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Service-specific database configurations
IDENTITY_DB_NAME=identity_service_dev
IDENTITY_DB_USER=developer
IDENTITY_DB_PASS=CHANGE_ME_SECURE_PASSWORD
BIOMETRIC_DB_NAME=biometric_service_dev
TRANSACTION_DB_NAME=transaction_service_dev
AGENT_DB_NAME=agent_service_dev

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ================================
# RABBITMQ CONFIGURATION
# ================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_SECURE_PASSWORD
RABBITMQ_VHOST=eazepay

# ================================
# MONGODB CONFIGURATION
# ================================
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
MONGODB_DB=eazepay_analytics

# ================================
# SERVICE URLS
# ================================
# Internal service URLs (for service-to-service communication)
IDENTITY_SERVICE_URL=http://identity-service:8000
BIOMETRIC_SERVICE_URL=http://biometric-service:8001
TRANSACTION_SERVICE_URL=http://transaction-service:8002
WALLET_SERVICE_URL=http://wallet-service:8003
USSD_SERVICE_URL=http://ussd-service:8004
AGENT_SERVICE_URL=http://agent-service:8005
AIML_SERVICE_URL=http://ai-ml-service:8010
IOT_SERVICE_URL=http://iot-service:8020
BLOCKCHAIN_SERVICE_URL=http://blockchain-service:8030
ROBOTICS_SERVICE_URL=http://robotics-service:8040
FINANCIAL_SERVICE_URL=http://financial-service:8011

# External API URLs (for frontend/API gateway)
API_GATEWAY_URL=https://api.eazepay.com
ADMIN_PORTAL_URL=https://admin.eazepay.com
CUSTOMER_PORTAL_URL=https://app.eazepay.com
AGENT_PORTAL_URL=https://agent.eazepay.com

# ================================
# SECURITY
# ================================
# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (must be exactly 32 characters for AES-256)
ENCRYPTION_KEY=CHANGE_ME_TO_32_CHARACTER_KEY

# API Keys (for service-to-service authentication)
INTERNAL_API_KEY=CHANGE_ME_SECURE_API_KEY

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ================================
# AI/ML CONFIGURATION
# ================================
FRAUD_DETECTION_THRESHOLD=0.7
RISK_SCORING_MODEL=xgboost_v2
AI_ML_SERVICE_API_KEY=CHANGE_ME

# ================================
# IOT CONFIGURATION
# ================================
MQTT_BROKER_URL=mqtt://mosquitto:1883
GEOFENCE_RADIUS_METERS=100
IOT_SERVICE_API_KEY=CHANGE_ME

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================
FABRIC_CHANNEL_NAME=eazepay-channel
FABRIC_CHAINCODE_NAME=transaction-ledger
BLOCKCHAIN_SERVICE_API_KEY=CHANGE_ME

# ================================
# ROBOTICS CONFIGURATION
# ================================
BIOMETRIC_MATCH_THRESHOLD=80
OCR_CONFIDENCE_THRESHOLD=70
KIOSK_MAX_CASH_CAPACITY=1000000
KIOSK_LOW_CASH_THRESHOLD=50000
ROBOTICS_SERVICE_API_KEY=CHANGE_ME

# ================================
# MONITORING & LOGGING
# ================================
# Prometheus
PROMETHEUS_URL=http://prometheus:9090

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME

# Elasticsearch (for centralized logging)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=CHANGE_ME

# Sentry (error tracking)
SENTRY_DSN=CHANGE_ME_IF_USING_SENTRY

# ================================
# EXTERNAL SERVICES
# ================================
# SMS Gateway
SMS_PROVIDER=twilio
SMS_API_KEY=CHANGE_ME
SMS_API_SECRET=CHANGE_ME
SMS_FROM_NUMBER=+1234567890

# Email Service
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=CHANGE_ME
EMAIL_FROM_ADDRESS=noreply@eazepay.com

# Payment Gateway (if integrating external payment processors)
PAYMENT_GATEWAY_PROVIDER=stripe
PAYMENT_GATEWAY_API_KEY=CHANGE_ME
PAYMENT_GATEWAY_SECRET_KEY=CHANGE_ME

# ================================
# SPRING BOOT CONFIGURATION
# ================================
# Transaction Service (Java/Spring Boot)
SPRING_APPLICATION_NAME=transaction-service
SERVER_PORT=8002
SPRING_DATASOURCE_URL=jdbc:postgresql://postgresql:5432/transaction_service_dev
SPRING_DATASOURCE_USERNAME=developer
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_SECURE_PASSWORD
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized

# ================================
# PORT CONFIGURATION
# ================================
PORT=8000
IDENTITY_SERVICE_PORT=8000
BIOMETRIC_SERVICE_PORT=8001
TRANSACTION_SERVICE_PORT=8002
WALLET_SERVICE_PORT=8003
USSD_SERVICE_PORT=8004
AGENT_SERVICE_PORT=8005
AI_ML_SERVICE_PORT=8010
IOT_SERVICE_PORT=8020
BLOCKCHAIN_SERVICE_PORT=8030
ROBOTICS_SERVICE_PORT=8040
FINANCIAL_SERVICE_PORT=8011

# Portal Ports
ADMIN_PORTAL_PORT=8080
SUPERUSER_PORTAL_PORT=8090
CUSTOMER_PORTAL_PORT=3001
AGENT_PORTAL_PORT=3002

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BIOMETRIC=true
ENABLE_BLOCKCHAIN=false
ENABLE_IOT=true
ENABLE_AI_ML=true
ENABLE_ROBOTICS=false

# ================================
# PRODUCTION NOTES
# ================================
# 1. Change ALL default passwords
# 2. Use strong, randomly generated secrets
# 3. Store sensitive values in secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)
# 4. Never commit .env files to version control
# 5. Use different credentials for each environment (dev, staging, production)
# 6. Rotate secrets regularly
# 7. Enable SSL/TLS for all external communications
# 8. Configure proper CORS origins (not "*")
# 9. Set up monitoring and alerting
# 10. Review security checklist before deployment

