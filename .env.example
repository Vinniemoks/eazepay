# Eazepay Environment Configuration
# Copy this file to .env and update with your values

# ================================
# DEPLOYMENT MODE
# ================================
# Options: standalone, integrated, distributed
DEPLOYMENT_MODE=integrated

# ================================
# BRANDING
# ================================
APP_NAME=Eazepay
APP_DOMAIN=eazepay.com
COMPANY_NAME=Eazepay Ltd

# ================================
# SERVICE URLS (Update based on deployment)
# ================================
# For local development
IDENTITY_SERVICE_URL=http://localhost:8000
BIOMETRIC_SERVICE_URL=http://localhost:8001
TRANSACTION_SERVICE_URL=http://localhost:8002
WALLET_SERVICE_URL=http://localhost:8003
USSD_SERVICE_URL=http://localhost:8004
AGENT_SERVICE_URL=http://localhost:8005

# For production (example)
# IDENTITY_SERVICE_URL=https://identity.eazepay.com
# BIOMETRIC_SERVICE_URL=https://biometric.eazepay.com
# TRANSACTION_SERVICE_URL=https://transactions.eazepay.com
# WALLET_SERVICE_URL=https://wallet.eazepay.com
# USSD_SERVICE_URL=https://ussd.eazepay.com
# AGENT_SERVICE_URL=https://agents.eazepay.com

# API Gateway (if using)
API_GATEWAY_URL=http://localhost:80
# API_GATEWAY_URL=https://api.eazepay.com

# ================================
# DATABASE CONFIGURATION
# ================================
# Shared database (current setup)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=eazepay_dev
DB_USER=developer
DB_PASS=dev_password_2024!

# Or separate databases per service
# IDENTITY_DB_HOST=localhost
# IDENTITY_DB_NAME=eazepay_identity
# TRANSACTION_DB_HOST=localhost
# TRANSACTION_DB_NAME=eazepay_transactions
# WALLET_DB_HOST=localhost
# WALLET_DB_NAME=eazepay_wallet

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024!

# ================================
# MONGODB (for analytics)
# ================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASS=mongo_password_2024!
MONGODB_DB=eazepay_analytics

# ================================
# MESSAGE QUEUE (Optional for standalone)
# ================================
RABBITMQ_ENABLED=true
RABBITMQ_URL=amqp://admin:rabbitmq_password_2024!@localhost:5672/eazepay
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=rabbitmq_password_2024!

# ================================
# SECURITY
# ================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ================================
# EXTERNAL SERVICES
# ================================
# Telecom USSD Endpoints
SAFARICOM_USSD_ENDPOINT=https://sandbox.safaricom.co.ke/ussd/v1/
AIRTEL_USSD_ENDPOINT=https://openapiuat.airtel.africa/ussd/v1/
TELKOM_USSD_ENDPOINT=https://developer.telkom.co.ke/ussd/v1/

# Government Verification APIs
GOVERNMENT_API_ENABLED=false
GOVERNMENT_API_URL=https://api.government.ke/verify
GOVERNMENT_API_KEY=your_api_key

# SMS Provider
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_FROM_NUMBER=+254700000000

# Email Provider
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@eazepay.com

# ================================
# MONITORING & LOGGING
# ================================
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true

# Sentry (Error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=*
# For production, specify allowed origins:
# CORS_ORIGIN=https://app.eazepay.com,https://admin.eazepay.com

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BIOMETRIC=true
ENABLE_USSD=true
ENABLE_GOVERNMENT_VERIFICATION=false
ENABLE_2FA=true
ENABLE_AUDIT_LOGS=true

# ================================
# MOBILE APP CONFIGURATION
# ================================
# Firebase (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_SENDER_ID=

# App Store / Play Store
IOS_APP_ID=
ANDROID_PACKAGE_NAME=com.eazepay.app

# ================================
# DOCKER CONFIGURATION
# ================================
DOCKER_USER=your_docker_username
DOCKER_PASS=your_docker_password
DOCKER_REGISTRY=docker.io

# ================================
# CI/CD
# ================================
ENV=dev
SERVICES=agent-service,identity-service,ussd-service,biometric-service,transaction-service,wallet-service
RUN_TESTS=true
RUN_LINT=true
RUN_BUILD=true
RUN_SECURITY=true

# ================================
# NOTIFICATIONS
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
WEBHOOK_URL=https://your.webhook.endpoint
EMAIL_TO=admin@eazepay.com
EMAIL_CC=
EMAIL_BCC=

# ================================
# CLOUD STORAGE (Optional)
# ================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=eazepay-documents

# Google Cloud
GCS_PROJECT_ID=
GCS_BUCKET=eazepay-documents

# Azure
AZURE_STORAGE_ACCOUNT=
AZURE_CONTAINER=eazepay-documents

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups
